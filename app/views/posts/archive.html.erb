<% @posts_months.each do |month, posts| %>
  <div class="post post-archive-month cf">
    <header>
      <h2><%= month.strftime("%B, %Y") %></h2>
    </header>
    <% posts.each do |post| %>
      <%= link_to permalink(post), class: "post-archive" do %>
        <div class="post-title"><%= post.title %></div>
        <div class="meta">
          <%= post.published_at.strftime("%B %d, %Y") %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

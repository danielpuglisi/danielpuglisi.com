<%= render "shared/issues_navigation" %>

<article class="post">
  <header>
    <h2>Friday is Webday Issue #<%= @issue.number %></h2>
    <div class="meta">
      <%= @issue.published_at.strftime("%B %d, %Y") %>
      - <%= link_to "permalink", issue_path(@issue.number) %>
  </div>
  </header>
  <%= markdown(liquidize(@issue.body)) %>
  <%= render "posts/footer" %>
</article>

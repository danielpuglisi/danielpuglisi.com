<%= simple_form_for [:admin, @link] do |f| %>
  <%= render "shared/form_errors", object: @link %>

  <div class="meta">
    <div class="input one-half">
      <%= f.label :name %>
      <div class="input-inner">
        <%= f.input_field :name, placeholder: "Name" %>
      </div>
    </div>

    <div class="input one-half">
      <%= f.label :url, "URL" %>
      <div class="input-inner">
        <%= f.input_field :url, placeholder: "http://" %>
      </div>
    </div>

    <div class="input one-half">
      <%= f.label :tag_list %>
      <div class="input-inner">
        <%= f.input_field :tag_list %>
      </div>
    </div>

    <%= f.association :issue, label_method: :number, wrapper_html: {class: "one-quarter"} %>
    <%= f.submit class: "btn one-quarter" %>
    <div class="clear"></div>
  </div>
  <%= f.input :description, label: false, placeholder: "Description...", input_html: {class: "form-post-content"} %>
<% end %>

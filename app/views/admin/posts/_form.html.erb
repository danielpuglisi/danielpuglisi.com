<div class="form-post">
<%= simple_form_for [:admin, @post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title, label: "Title", placeholder: "Title ...", input_html: {autocomplete: "off"}, wrapper_html: {class: "form-post-title"} %>
  <div class="meta">
    <% if @post.slug %>
      <%= f.input :slug,
        input_html: {placeholder: "slug ..."},
        wrapper_html: {class: "form-post-slug one-third"}
      %>
    <% end %>
    <%= f.input :external_link, placeholder: "http://", wrapper_html: {class: "one-third"} %>
    <%= f.input :tag_list, wrapper_html: {class: "one-third"} %>
    <%= f.input :published, as: :select, prompt: false, label: "Status", collection: [["Draft", false],["Published", true]], wrapper_html: {class: "one-quarter"} %>
    <%= f.input :published_at, wrapper_html: {class: "one-quarter"} %>
    <%= f.input :style, label: "Type", as: :select, collection: ["post", "link"], prompt: false, wrapper_html: {class: "one-quarter"} %>
    <%= f.submit class: "btn right one-quarter" %>
    <div class="clear"></div>
    <div class="clear"></div>
  </div>
  <%= f.input :content, label: false, placeholder: "Ready, Steady, Go!", input_html: {class: "form-post-content"} %>
  <div class="clear"></div>
<% end %>
</div>

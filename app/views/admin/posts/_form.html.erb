<%= simple_form_for [:admin, @post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box details left">
    <%= f.input :title, label: false, placeholder: "Title ..." %>
    <% if @post.slug %>
      <div class="input slug">
        <%= "#{request.protocol}#{request.host_with_port}" %>/<%= @post.published_at.strftime("%Y/%m") %>/<%= f.input_field :slug, label: false, placeholder: "slug ..." %>
      </div>
    <% end %>
    <%= f.input :content, label: false, placeholder: "Ready, Steady, Go!" %>
  </div>
  <div class="box meta right">
    <% unless @post.new_record? %>
      <%= link_to "View", permalink(@post), class: "preview-button", target: "_blank" %>
    <% end %>
    <%= f.input :published, as: :select, prompt: false, label: false, collection: [["Draft", false],["Published", true]] %>
    <%= f.input :published_at %>

    <%= f.input :tag_list, hint: "Separate multiple tags with commas" %>

    <%= f.input :style, label: "Type", as: :select, collection: ["post", "link"], prompt: false %>

    <%= f.input :external_link, placeholder: "http://" %>

    <div class="actions">
      <%= f.submit class: "btn" %>
    </div>
  </div>
  <div class="clear"></div>
<% end %>
